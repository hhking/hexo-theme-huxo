				<section>
				<span class="fa listing-seperator">
					<span class="tag-text">{{ _currentdate }}</span>
				</span>
				{%- assign _date = _currentdate -%}
			  {%- endif -%}

				<div class="post-preview item" data-tags="{{ _tags }}">
				    <a href="{{ _article.url | prepend: site.baseurl }}">
				        <h2 class="post-title">
                  {{ _article.title }}
				        </h2>
				        {% if _article.subtitle %}
				        <h3 class="post-subtitle">
				            {{ _article.subtitle }}
				        </h3>
				        {% endif %}
				    </a>
					<hr>
				</div>
      {% endfor %} -->

      <%
        const _sorted_list = site.posts.sort('date', -1);
        let _data = '';
      %>
      <% _sorted_list.forEach((post, i) => { %>
        <%
          let date = post.date.clone();
          let _tagsArr = [];
          const year = date.year();

          post.tags.forEach(tag => {
            _tagsArr.push(encodeURIComponent(tag.name));
          });
        %>

        <% if (year != _data) {%>
        <% if (i !== 0) { %>
          </section>
        <% } %>
        <section>
            <span class="fa listing-seperator">
              <span class="tag-text"><%= year %></span>
            </span>
          <% } %>
          <% _data = year %>
          <div class="post-preview item" data-tags="<%= _tagsArr.join(',') %>">
              <a href="<%= url_for(post.path) %>">
                  <h2 class="post-title">
                    <%= post.title %>
                  </h2>
                  <% if (post.subtitle) { %>
                  <h3 class="post-subtitle">
                      <% post.subtitle %>
                  </h3>
                  <% } %>
              </a>
            <hr>
          </div>
      <% }) %>
		</div>
	</div>
</div>
