<% if (page.posts.length > 0) { %>
  <% page.posts.each(function(post) { %>
    <div class="post-preview">
      <a href="<%= url_for(post.path) %>">
          <h2 class="post-title">
              <%= post.title %>
          </h2>
          <% if (post.subtitle){ %>
          <h3 class="post-subtitle">
              <%= post.subtitle %>
          </h3>
          <% } %>
          <div class="post-content-preview">
              <% if (post.lang == 'en'){ %>
                <%- truncate(strip_html(post.content), {length: 300, omission: '...'}) %>...
              <% } else { %>
                <%- truncate(strip_html(post.content), {length: 200, omission: '...'}) %>...
              <% } %>
          </div>
      </a>
      <p class="post-meta">
          Posted by <% post.author || config.author || config.title %> on <%= post.date.format(config.date_format) %>
      </p>
  </div>
  <hr>
  <% })%>
<% } %>
