<%
  let ccLicense = ('' + theme.creative_commons.license).toLowerCase();
  let ccLanguage = theme.creative_commons.language;
  let ccIcon = '<i class="fa fa-fw fa-creative-commons"></i>';
  let ccText = ccLicense.toUpperCase();
  let ccType = '';

  if (ccLicense === 'zero') {
    ccType = 'publicdomain/zero/1.0/' + ccLanguage;
  } else {
    ccType = 'licenses/' + ccLicense + '/4.0/' + ccLanguage
  }
  let ccURL = 'https://creativecommons.org/' + ccType;
%>

<ul class="post-copyright">
  <li class="post-copyright-author">
    <strong>本文作者：</strong>
    <%= page.author || config.author %>
  </li>
  <li class="post-copyright-link">
    <strong>本文链接：</strong>
    <a href="<%= page.link || page.permalink %>" title="<%= page.title %>"><%= page.link || page.permalink %></a>
  </li>
  <li class="post-copyright-license">
    <strong>版权声明：</strong>
    本博客所有文章除特别声明外，均采用 <a href="<%= ccURL %>" rel="external nofollow noopener noreferrer" target="_blank"><i class="fa fa-fw fa-creative-commons"></i> <%= ccText %></a> 许可协议。转载请注明出处！
   </li>
</ul>
